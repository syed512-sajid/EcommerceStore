@model EcommerceStore.Models.Order
@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <div class="display-1 text-success">✓</div>
        <h1 class="display-4">Order Confirmed!</h1>
        <p class="lead">Thank you for your order, <strong>@Model.CustomerName</strong></p>
        <p class="text-muted">Order ID: <strong>#@Model.Id</strong></p>
    </div>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-receipt me-2"></i>Order Details</h4>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h5 class="border-bottom pb-2 mb-3"><i class="fas fa-user-circle me-2"></i>Customer Information</h5>
                        <div class="row mb-2">
                            <div class="col-4"><strong>Order Date:</strong></div>
                            <div class="col-8">@Model.OrderDate.ToString("dd MMM yyyy, hh:mm tt")</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-4"><strong>Email:</strong></div>
                            <div class="col-8">@Model.Email</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-4"><strong>Phone:</strong></div>
                            <div class="col-8">@Model.Phone</div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-4"><strong>Delivery Address:</strong></div>
                            <div class="col-8">@Model.Address</div>
                        </div>
                    </div>

                    <hr>

                    <h5 class="mb-3"><i class="fas fa-shopping-bag me-2"></i>Items Ordered</h5>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Product</th>
                                    <th class="text-center">Quantity</th>
                                    <th class="text-end">Price</th>
                                    <th class="text-end">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                    <tr>
                                        <td><strong>@item.Product?.Name</strong></td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-end">Rs. @item.Price.ToString("N0")</td>
                                        <td class="text-end"><strong>Rs. @((item.Price * item.Quantity).ToString("N0"))</strong></td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-secondary">
                                <tr>
                                    <td colspan="3" class="text-end"><h5 class="mb-0">Total Amount:</h5></td>
                                    <td class="text-end"><h4 class="text-success mb-0">Rs. @Model.TotalAmount.ToString("N0")</h4></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <div class="alert alert-info mt-4" role="alert">
                        <i class="fas fa-envelope me-2"></i>
                        <strong>Order confirmation email sent!</strong>
                        <p class="mb-0 mt-2">A detailed confirmation has been sent to <strong>@Model.Email</strong>. Please check your inbox and spam folder.</p>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-3 mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary flex-fill">
                    <i class="fas fa-home me-2"></i>Continue Shopping
                </a>
                <button onclick="window.print()" class="btn btn-outline-secondary flex-fill">
                    <i class="fas fa-print me-2"></i>Print Order
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });
    </script>
}