@model List<EcommerceStore.Models.Product>

@{
    ViewData["Title"] = "Admin - Manage Products";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Product Management</h1>
        <div>
            <a asp-action="Orders" class="btn btn-info">View Orders</a>
            <a asp-action="AddProduct" class="btn btn-success">Add New Product</a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <h4>No products found</h4>
            <a asp-action="AddProduct" class="btn btn-primary mt-2">Add Your First Product</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Category</th> @* New Column *@
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>
                                @if (product.Images != null && product.Images.Any())
                                {
                                    <img src="@product.Images[0].ImageUrl" alt="@product.Name" style="width:50px;height:50px;object-fit:cover;">
                                }
                                else
                                {
                                    <img src="/images/no-image.jpg" alt="@product.Name" style="width:50px;height:50px;object-fit:cover;">
                                }
                            </td>
                            <td>@product.Name</td>
                            <td>@product.Category</td>
                            <td>Rs. @product.Price.ToString("N0")</td>
                            <td>@product.Stock</td>
                            <td>@product.CreatedAt.ToString("dd MMM yyyy")</td>
                            <td>
                                <a asp-action="EditProduct" asp-route-id="@product.Id" class="btn btn-sm btn-primary">Edit</a>
                                <form asp-action="DeleteProduct" asp-route-id="@product.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure?')">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    }
</div>
