@model EcommerceStore.Models.Order
@{
    ViewData["Title"] = "Order Details";
    var isPending = Model.Status == "Pending";
    var statusClass = Model.Status switch
    {
        "Delivered" => "success",
        "Cancelled" => "danger",
        "NotAccepted" => "warning",
        _ => "primary"
    };
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Order #@Model.Id Details</h1>
        <a asp-action="Orders" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Orders
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Order Status Badge -->
    <div class="alert alert-@statusClass mb-4">
        <h5 class="mb-0">
            <i class="bi bi-info-circle-fill"></i>
            Order Status: <strong>@Model.Status</strong>
            @if (Model.StatusUpdatedAt.HasValue)
            {
                <span class="ms-2 text-muted" style="font-size: 0.9rem;">
                    (Updated: @Model.StatusUpdatedAt.Value.ToString("dd MMM yyyy, hh:mm tt"))
                </span>
            }
        </h5>
        @if (!string.IsNullOrEmpty(Model.StatusReason))
        {
            <p class="mb-0 mt-2"><strong>Reason:</strong> @Model.StatusReason</p>
        }
    </div>

    <div class="row">
        <!-- Customer Information -->
        <div class="col-md-6">
            <div class="card mb-3 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-person-fill"></i> Customer Information</h5>
                </div>
                <div class="card-body">
                    <p class="mb-2"><strong>Name:</strong> @Model.CustomerName</p>
                    <p class="mb-2"><strong>Email:</strong> @Model.Email</p>
                    <p class="mb-2"><strong>Phone:</strong> @Model.Phone</p>
                    <p class="mb-2"><strong>TrackingID:</strong> @Model.TrackingId</p>
                    <p class="mb-2"><strong>Address:</strong> @Model.Address</p>
                    @if (!string.IsNullOrEmpty(Model.Landmark))
                    {
                        <p class="mb-2"><strong>Landmark:</strong> @Model.Landmark</p>
                    }
                    <p class="mb-0"><strong>Order Date:</strong> @Model.OrderDate.ToString("dd MMM yyyy, hh:mm tt")</p>
                </div>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="col-md-6">
            <div class="card mb-3 shadow-sm">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-cash-stack"></i> Order Summary</h5>
                </div>
                <div class="card-body">
                    <h2 class="text-primary mb-2">Rs. @Model.TotalAmount.ToString("N0")</h2>
                    <p class="text-muted mb-2">Total Amount</p>
                    <hr>
                    <p class="mb-2"><strong>Payment Method:</strong> @Model.PaymentMethod</p>
                    <p class="mb-2"><strong>Total Items:</strong> @Model.OrderItems.Count</p>
                    @*<p class="mb-0"><strong>Email Notification:</strong>
                    @if (Model.NotificationSent)
                    {
                    <span class="badge bg-success">Sent</span>
                    }
                    else
                    {
                    <span class="badge bg-secondary">Not Sent</span>
                    }
                    </p>*@
                </div>
            </div>
        </div>
    </div>

    <!-- Order Items -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="bi bi-box-seam"></i> Order Items</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Product</th>
                            <th>Size</th>
                            <th class="text-center">Quantity</th>
                            <th class="text-end">Price</th>
                            <th class="text-end">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderItems)
                        {
                            <tr>
                                <td>
                                    <strong>@item.Product?.Name</strong>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Size))
                                    {
                                        <span class="badge bg-secondary">@item.Size</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-primary">@item.Quantity</span>
                                </td>
                                <td class="text-end">Rs. @item.Price.ToString("N0")</td>
                                <td class="text-end">
                                    <strong>Rs. @((item.Price * item.Quantity).ToString("N0"))</strong>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <td colspan="4" class="text-end"><strong>Total Amount:</strong></td>
                            <td class="text-end">
                                <strong class="text-success fs-5">Rs. @Model.TotalAmount.ToString("N0")</strong>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
    <!-- Email Notice -->
    <div class="email-notice card shadow-sm border-0 mb-4">
        <div class="card-body d-flex align-items-start gap-3">
            <div class="email-icon">
                <i class="fas fa-envelope-open-text"></i>
            </div>
            <div>
                <h5 class="mb-1 text-success fw-bold">
                    Order Confirmation Email Sent
                </h5>
                <p class="mb-0 text-muted">
                    A detailed confirmation has been sent to
                    <strong>@Model.Email</strong>.
                    Please check your inbox or spam folder.
                </p>
            </div>
        </div>
    </div>


    <div class="d-flex gap-3 mb-5">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary px-4">
            <i class="fas fa-shopping-cart me-2"></i>Continue Shopping
        </a>

        <button onclick="window.print()" class="btn btn-outline-dark px-4">
            <i class="fas fa-print me-2"></i>Print Order
        </button>
    </div>




