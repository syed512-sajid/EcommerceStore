<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BAZARIO</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --primary-color: #667eea;
            --secondary-color: #764ba2;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f8f9fa;
        }

        .navbar {
            background: var(--primary-gradient) !important;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
            padding: 15px 0;
        }

        .navbar-brand {
            font-size: 26px;
            font-weight: 700;
            color: white !important;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

            .navbar-brand i {
                margin-right: 10px;
            }

        .nav-link {
            color: rgba(255, 255, 255, 0.9) !important;
            font-weight: 500;
            margin: 0 10px;
            padding: 8px 15px !important;
            border-radius: 8px;
            transition: all 0.3s;
        }

            .nav-link:hover {
                background: rgba(255, 255, 255, 0.2);
                color: white !important;
                transform: translateY(-2px);
            }

            .nav-link.active {
                background: rgba(255, 255, 255, 0.3);
            }

        .btn-logout {
            background: rgba(255, 255, 255, 0.2);
            border: 2px solid white;
            color: white;
            padding: 6px 20px;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.3s;
        }

            .btn-logout:hover {
                background: white;
                color: var(--primary-color);
            }

        footer {
            background: #2c3e50;
            color: white;
            padding: 30px 0;
            margin-top: 60px;
        }

        .footer-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
        }

        .footer-links a {
            color: rgba(255, 255, 255, 0.8);
            margin: 0 15px;
            text-decoration: none;
            transition: color 0.3s;
        }

            .footer-links a:hover {
                color: white;
            }

        .admin-badge {
            background: #ffd700;
            color: #333;
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            margin-left: 10px;
        }

        .toast-container {
            z-index: 1055 !important;
            pointer-events: none !important;
        }

            .toast-container .toast {
                pointer-events: auto !important;
            }

        .modal-backdrop {
            z-index: 1040 !important;
        }

        .modal {
            z-index: 1050 !important;
        }

        /* Track Order Form Styling */
        .track-order-form {
            max-width: 300px;
        }

            .track-order-form input {
                border-radius: 20px 0 0 20px;
                border-right: none;
            }

            .track-order-form button {
                border-radius: 0 20px 20px 0;
                background: rgba(255, 255, 255, 0.2);
                border: 1px solid rgba(255, 255, 255, 0.5);
                color: white;
                transition: all 0.3s;
            }

                .track-order-form button:hover {
                    background: white;
                    color: var(--primary-color);
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark sticky-navbar">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-store"></i>BAZARIO
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">

                    <!-- LEFT MENU -->
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">
                                <i class="fas fa-info-circle me-1"></i>About
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link position-relative" asp-controller="Home" asp-action="Cart">
                                <i class="fas fa-shopping-cart me-1"></i>Cart
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link position-relative" asp-controller="Checkout" asp-action="Index">
                                <i class="fas fa-credit-card me-1"></i>Checkout
                            </a>
                        </li>
                    </ul>

                    <!-- PRODUCT SEARCH -->
                    <form class="d-flex me-3" id="productSearchForm">
                        <div class="input-group input-group-sm">
                            <input type="search"
                                   class="form-control"
                                   id="productSearchInput"
                                   placeholder="Search products..."
                                   aria-label="Search">
                            <button class="btn btn-light" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </form>

                    <!-- ORDER TRACKING FORM -->
                    <form class="d-flex me-3 track-order-form"
                          asp-controller="Checkout"
                          asp-action="TrackOrder"
                          method="get">
                        <div class="input-group input-group-sm">
                            <input class="form-control"
                                   type="text"
                                   name="trackingId"
                                   placeholder="Track Order ID"
                                   title="Enter your tracking ID"
                                   pattern="[A-Za-z0-9]+"
                                   required>
                            <button class="btn" type="submit" title="Track Order">
                                <i class="fas fa-search-location"></i>
                            </button>
                        </div>
                    </form>

                    <!-- RIGHT MENU -->
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Index">
                                        <i class="fas fa-cog me-1"></i>Admin Panel
                                        <span class="admin-badge">ADMIN</span>
                                    </a>
                                </li>
                            }
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-logout ms-2">
                                        <i class="fas fa-sign-out-alt me-1"></i>Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt me-1"></i>Admin Login
                                </a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        <div class="container">
            <div class="footer-content">
                <div>
                    <p class="mb-0">&copy; @DateTime.Now.Year BAZARIO. All Rights Reserved.</p>
                </div>
                <div class="footer-links">
                    <a href="#" class="coming-soon" data-feature="Facebook"><i class="fab fa-facebook"></i></a>
                    <a href="#" class="coming-soon" data-feature="Twitter"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="coming-soon" data-feature="Instagram"><i class="fab fa-instagram"></i></a>
                    <a href="https://mail.google.com/mail/?view=cm&fs=1&to=Bazario@gmail.com&su=Inquiry&body=Hello%20Team"
                       target="_blank">Contact</a>
                    <a asp-controller="Checkout" asp-action="TrackOrder">
                        <i class="fas fa-search-location me-1"></i>Track Order
                    </a>
                </div>

                <!-- Large Common Modal -->
                <div id="popupModal" class="modal fade" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered modal-xl">
                        <div class="modal-content">
                            <div class="modal-header" style="background:#007bff;">
                                <h5 class="modal-title text-white fw-bold">Coming Soon!</h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body" style="font-size:16px; color:#212529;">
                                <p>This feature is under development. Stay tuned for updates!</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </footer>

    <!-- ORDER REASON MODAL (GLOBAL) -->
    <div class="modal fade" id="reasonModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Reason Required</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <textarea id="reasonText" class="form-control" rows="4"
                              placeholder="Enter reason here..."></textarea>
                    <div id="reasonError" class="text-danger small mt-1 d-none">
                        Reason is required
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmReasonBtn">Confirm</button>
                </div>
            </div>
        </div>
    </div>

    <!-- GLOBAL TOAST -->
    <div class="toast-container position-fixed top-0 end-0 p-3">
        <div id="actionToast" class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body" id="toastMessage"></div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Order.js" asp-append-version="true"></script>
    <script src="~/js/home.js" asp-append-version="true"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const popupModalEl = document.getElementById('popupModal');
            const popupModal = new bootstrap.Modal(popupModalEl, {
                backdrop: 'static',
                keyboard: true
            });

            document.querySelectorAll('.coming-soon').forEach(link => {
                link.addEventListener('click', function (e) {
                    e.preventDefault();

                    const modalText = popupModalEl.querySelector('p');
                    if (modalText) {
                        const featureName = this.getAttribute('data-feature') || "This feature";
                        modalText.textContent = `${featureName} is coming soon!`;
                    }

                    popupModal.show();
                });
            });

            popupModalEl.addEventListener('hidden.bs.modal', function () {
                const modalText = popupModalEl.querySelector('p');
                if (modalText) modalText.textContent = "This feature is under development. Stay tuned for updates!";
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>